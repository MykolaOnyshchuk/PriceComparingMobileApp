<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/product_list_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/product_list_detail"
        android:layout_alignParentStart="true"
        android:layout_marginStart="380dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/rupee_symbol"
        app:srcCompat="@drawable/ic_indian_rupee_symbol" />

    <ImageView
        android:id="@+id/product_list_thumbnail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:contentDescription="@string/thumbnail"
        android:scaleType="centerInside"
        tools:ignore="ImageContrastCheck"
        tools:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/product_list_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:layout_toEndOf="@+id/product_list_text_layout"
        android:maxLines="1"
        android:textColor="#FFE900"
        android:textSize="17sp"
        android:textStyle="bold"
        tools:text="Detail" />

    <RelativeLayout
        android:id="@+id/product_list_text_layout"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/product_list_thumbnail"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/product_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:text="Title" />

    </RelativeLayout>
</RelativeLayout>