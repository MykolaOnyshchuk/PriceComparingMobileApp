<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#18191A"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/instruction1.4"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="52dp"
                android:text="@string/instruction1_4"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/instruction1.1"
                android:layout_width="179dp"
                android:layout_height="26dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="32dp"
                android:text="@string/instruction1_1"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/instruction1.2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="211dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/ic_menu"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/instruction1.3"
                android:layout_width="179dp"
                android:layout_height="26dp"
                android:layout_marginStart="244dp"
                android:layout_marginTop="32dp"
                android:text="@string/instruction1_3"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/instruction2.3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="252dp"
                android:layout_marginTop="140dp"
                android:background="@drawable/ic_search"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/instruction2.4"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginStart="276dp"
                android:layout_marginTop="136dp"
                android:text="@string/instruction2_4"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/instruction2.5"
                android:layout_width="346dp"
                android:layout_height="90dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="156dp"
                android:text="@string/instruction2_5"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/instruction3.1"
                android:layout_width="346dp"
                android:layout_height="90dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="260dp"
                android:text="@string/instruction3_1"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/instruction4.1"
                android:layout_width="346dp"
                android:layout_height="120dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="360dp"
                android:text="@string/instruction4_1"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/instruction2.1"
                android:layout_width="330dp"
                android:layout_height="60dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="116dp"
                android:text="@string/instruction2_1"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:fitsSystemWindows="true"
            app:menu="@menu/main_nav_menu" />

    </androidx.drawerlayout.widget.DrawerLayout>


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF000000"
        android:elevation="5dp">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/toolbar_menu"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_menu" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>

</RelativeLayout>